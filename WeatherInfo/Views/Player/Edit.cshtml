@model WeatherInfo.Models.Player

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Player</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PlayerId)

        <div class="form-group">
            @Html.LabelFor(model => model.PlayerPoS, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlayerPoS)
                @Html.ValidationMessageFor(model => model.PlayerPoS)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PlayerNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlayerNumber)
                @Html.ValidationMessageFor(model => model.PlayerNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PlayerName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlayerName)
                @Html.ValidationMessageFor(model => model.PlayerName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PlayerStatus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlayerStatus)
                @Html.ValidationMessageFor(model => model.PlayerStatus)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.statisticsId, "statisticsId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("statisticsId", String.Empty)
                @Html.ValidationMessageFor(model => model.statisticsId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
