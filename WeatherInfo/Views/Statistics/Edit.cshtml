                @Html.EditorFor(model => model.TeamOrPlayer)
                @Html.ValidationMessageFor(model => model.TeamOrPlayer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Wins, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Wins)
                @Html.ValidationMessageFor(model => model.Wins)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Losses, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Losses)
                @Html.ValidationMessageFor(model => model.Losses)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rank, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rank)
                @Html.ValidationMessageFor(model => model.Rank)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

