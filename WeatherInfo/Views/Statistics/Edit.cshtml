        <h4>Statistics</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StatisticsId)

        <div class="form-group">
            @Html.LabelFor(model => model.TeamOrPlayer, new { @class = "control-label col-md-2" })
