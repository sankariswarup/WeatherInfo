@model WeatherInfo.Models.Statistics

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Statistics</h4>
        <hr />
        @Html.ValidationSummary(true)
        @{ List<SelectListItem>
            items = new List<SelectListItem>();
                items.Add(new SelectListItem
                {
                Text = "Team",
                Value = "1",
                 Selected = true
                });
                items.Add(new SelectListItem
                {
                Text = "Player",
                Value = "2",
               
                });
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.TeamOrPlayer, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("TeamOrPlayer",items)
                @Html.ValidationMessageFor(model => model.TeamOrPlayer)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Wins, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Wins)
                        @Html.ValidationMessageFor(model => model.Wins)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Losses, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Losses)
                        @Html.ValidationMessageFor(model => model.Losses)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Rank, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Rank)
                        @Html.ValidationMessageFor(model => model.Rank)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
